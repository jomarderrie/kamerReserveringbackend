# Use a base image with Java and Gradle to build the application
FROM openjdk:11-jre-slim AS builder

# Set the working directory inside the container
WORKDIR /app

# Copy only the build files necessary for resolving dependencies
COPY build.gradle settings.gradle gradlew gradlew.bat ./
COPY gradle ./gradle

# Grant execution permissions to the gradlew script
RUN chmod +x ./gradlew

# Run the dependency resolution
RUN ./gradlew dependencies

# Copy the entire project source code into the container
COPY . .

# Build the application using Gradle
RUN ./gradlew build

# Use a base image with Java to run the Spring Boot application
FROM openjdk:11-jre-slim

# Expose port 8080 for the Spring Boot application
EXPOSE 8080

# Copy the built JAR file from the builder stage to this stage
COPY --from=builder /app/build/libs/your-spring-boot-app.jar /app/app.jar

# Run the Spring Boot application
CMD ["java", "-jar", "/app/app.jar"]
